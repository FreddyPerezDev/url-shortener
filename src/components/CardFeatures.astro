---
interface Props {
  title: string;
  description: string;
  icon: string;
}

const { title, description, icon } = Astro.props;
---

<article
  class="bg-surface rounded-xl p-6 flex flex-col gap-4 border border-accent/10 hover:border-accent/25 transition-colors"
>
  <div
    class="w-10 h-10 rounded-lg bg-background flex items-center justify-center"
  >
    <Fragment set:html={icon} />
  </div>
  <div class="flex flex-col gap-2">
    <h3 class="text-primary font-bold text-base">{title}</h3>
    <p class="text-secondary text-sm leading-relaxed">{description}</p>
  </div>
</article>
