---
import Layout from "../layouts/Layout.astro";
---

<Layout title="404 - Enlace no encontrado">
  <section class="flex items-center justify-center min-h-[70vh]">
    <div class="text-center space-y-4 px-4">
      <h1 class="text-6xl font-bold text-accent">404</h1>
      <p class="text-xl text-primary">Enlace no encontrado</p>
      <p class="text-secondary max-w-md">
        El enlace acortado que buscas no existe o ha sido eliminado.
      </p>
      <a
        href="/"
        class="inline-block mt-4 px-6 py-2.5 bg-accent hover:bg-accent-hover text-primary rounded-full transition-colors text-sm font-medium"
      >
        Volver al inicio
      </a>
    </div>
  </section>
</Layout>
