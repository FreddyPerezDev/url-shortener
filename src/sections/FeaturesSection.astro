---
import CardFeatures from "../components/CardFeatures.astro";

const features = [
  {
    title: "Redirecciones rápidas",
    description:
      "Optimizado para la velocidad. Nuestra infraestructura garantiza que sus usuarios lleguen a su destino con latencia cero.",
    icon: `<svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="none" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" class="text-accent" viewBox="0 0 24 24"><path d="M13 2 3 14h9l-1 8 10-12h-9z"/></svg>`,
  },
  {
    title: "Contador de Visitas",
    description:
      "Mantén un registro del rendimiento de tus enlaces. Análisis simples y respetuosos con la privacidad para cada URL acortada.",
    icon: `<svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="none" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" class="text-accent" viewBox="0 0 24 24"><path d="M18 20V10m-6 10V4M6 20v-6"/></svg>`,
  },
  {
    title: "URLs Limpas",
    description:
      "No caracteres aleatorios si no los quieres. Generamos URLs cortas legibles y limpias por defecto.",
    icon: `<svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="none" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" class="text-accent" viewBox="0 0 24 24"><path d="M10 13a5 5 0 0 0 7.54.54l3-3a5 5 0 0 0-7.07-7.07l-1.72 1.71"/><path d="M14 11a5 5 0 0 0-7.54-.54l-3 3a5 5 0 0 0 7.07 7.07l1.71-1.71"/></svg>`,
  },
];
---

<section class="w-full px-6 py-16" aria-labelledby="features-title">
  <div class="max-w-4xl mx-auto">
    <h2 id="features-title" class="sr-only">Características</h2>

    <div class="grid grid-cols-1 md:grid-cols-3 gap-5">
      {
        features.map((feature) => (
          <CardFeatures
            title={feature.title}
            description={feature.description}
            icon={feature.icon}
          />
        ))
      }
    </div>
  </div>
</section>
