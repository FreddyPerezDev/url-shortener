---
const steps = [
  { number: 1, title: "Ingresar URL", description: "Ingresa tu URL larga" },
  {
    number: 2,
    title: "Click Acortar",
    description: "Procesamiento instantáneo",
  },
  { number: 3, title: "Comparte", description: "Copia y distribuye" },
];
---

<section class="w-full px-6 py-16" aria-labelledby="how-it-works-title">
  <div class="max-w-3xl mx-auto">
    <h2 id="how-it-works-title" class="sr-only">Cómo Funciona</h2>

    <ol class="grid grid-cols-1 md:grid-cols-3 gap-8 text-center">
      {
        steps.map((step) => (
          <li class="flex flex-col items-center gap-3">
            <div class="w-12 h-12 rounded-full bg-surface text-primary font-bold text-lg flex items-center justify-center border-accent-hover border-2">
              {step.number}
            </div>
            <h3 class="text-primary font-bold text-base">{step.title}</h3>
            <p class="text-secondary text-sm">{step.description}</p>
          </li>
        ))
      }
    </ol>
  </div>
</section>
